@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("New Customer","Create","",new {@class="btn btn-primary rounded-1 mb-2"})

@if (Model.Count == 0)
{
    <text>We don't have any customers yet!</text>
}
else
{
    <table class="table table-bordered table-hover">
        <tr class="row">
            <th class="col">Customer</th>
            <th class="col">Membership Type</th>
            <th class="col">Discount Rate</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="row">
                <td class="col">@Html.ActionLink(item.Name, "Edit", new { id = item.Id })</td>
                <td class="col">@item.MembershipType.Name</td>
                <td class="col">@item.MembershipType.DiscountRate%</td>
            </tr>
        }
    </table>
}


