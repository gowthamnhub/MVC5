@Html.ActionLink("New Customer", "Create", "", new { @class = "btn btn-primary rounded-1 mb-2" })

<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
